[colors]
background     = #BF1A1B26
background-alt = #991A1B26

foreground     = #C0CAF5
foreground-alt = #A9B1D6

primary   = #7AA2F7
secondary = #BB9AF7

alert = #F7768E


[bar/main]
monitor = ${env:MONITOR:}

width  = 100%
height = 24

background = ${colors.background}
foreground = ${colors.foreground}
line-color = ${colors.primary}

padding-left  = 2
padding-right = 2
module-margin = 2

; Fonts: Ubuntu Sans Mono regular + bold
font-0 = "Ubuntu Sans Mono:style=Medium:size=9;2"
font-1 = "Ubuntu Sans Mono:style=Bold:size=9;2"

; Layout: left = AMDG + workspaces, center = date/time, right = temp + RAM + battery
modules-left   = amdg xworkspaces
modules-center = date
modules-right  = temp ram batt

tray-position  = none

override-redirect = false
wm-restack       = generic
enable-ipc       = true


[module/amdg]
type = custom/text
content = %{T1}%{F#7AA2F7}AMDG%{F-}%{T-}
content-padding = 2


[module/xworkspaces]
type = internal/xworkspaces

pin-workspaces  = true
enable-click    = true
enable-scroll = false

format = <label-state>

; Active workspace: bright pill, dark text
label-active = %{T0}%name%%{T-}
label-active-foreground = #1A1B26
label-active-background = #7AA2F7
label-active-padding    = 2

; Occupied workspace (has windows)
label-occupied = %{T0}%name%%{T-}
label-occupied-foreground = #C0CAF5
label-occupied-padding    = 2

; Empty workspace
label-empty = %{T0}%name%%{T-}
label-empty-foreground = #A9B1D6
label-empty-padding    = 2


[module/date]
type = internal/date
interval = 5

date = %m/%d/%y
time = %I:%M %p

; date normal, time in bold + accent color
label = %{T1}%{F#A9B1D6}%date% %{F#7AA2F7}%time%%{F-}%{T-}


[module/temp]
type = custom/script
exec = ~/.local/bin/temp-f
interval = 5

format = <label>
format-padding = 1
format-prefix  = "| "
format-prefix-foreground = ${colors.foreground}
label = %output%


[module/ram]
type = internal/memory
interval = 3

format = <label>
label = %{T0}%{F#9ECE6A}RAM%{F-} %{F#C0CAF5}%percentage_used%%%{F-}%{T-}
label-padding = 2


[module/cpu]
type = internal/cpu
interval = 2

format = <label>
label = %{T0}%{F#E0AF68}CPU%{F-} %{F#C0CAF5}%percentage%%%{F-}%{T-}
label-padding = 2

[module/batt]
type = custom/script
exec = ~/.local/bin/battery-polybar
interval = 15

format = <label>
label = %output%
