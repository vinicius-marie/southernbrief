<!doctype html>
<html lang="en" class="antialiased">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title | default("Southern Brief") }}</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-gray-900">
  <header class="site-header">
    <div class="site-container flex items-center justify-between py-4">
      <a href="/" class="text-2xl font-bold text-gray-900 hover:text-blue-600">Southern Brief</a>
      <nav class="space-x-4 text-sm">
        <a href="/" class="hover:text-accent">Home</a>
        <a href="/countries" class="hover:text-accent">Countries</a>
        <a href="/about" class="hover:text-accent">About</a>
      </nav>
    </div>
  </header>

  <main class="site-container py-8">
    {{ content | safe }}
  </main>

  <footer class="border-t mt-12">
    <div class="site-container py-6 text-sm text-gray-600">
      <p>© Southern Brief • Independent reporting and aggregated coverage</p>
    </div>
  </footer>
</body>
</html>
